{
    "name": "DoubleZero Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "runArgs": [
        "--name=dz-dev-workspace-vsc",
        "--ulimit",
        "nofile=1048576:1048576"
    ],
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.25.5"
        },
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "1.90.0"
        },
    },
    "postCreateCommand": "sudo chown vscode:vscode /workspaces/doublezero/target && rustup component add --toolchain nightly rustfmt",
    "postStartCommand": "sudo chmod 666 /var/run/docker.sock && sudo chown -R vscode:vscode /home/vscode/.docker",
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "rust-lang.rust-analyzer",
                "casualjim.gotemplate",
                "zxh404.vscode-proto3"
            ],
            "settings": {
                "files.associations": {
                    "*.tmpl": "gotemplate"
                },
                "gopls": {
                    "buildFlags": [
                        "-tags=e2e integration container_tests qa stress evals"
                    ]
                },
                "rust-analyzer.rustfmt.extraArgs": [
                    "+nightly",
                    "--config",
                    "imports_granularity=Crate"
                ],
                "rust-analyzer.checkOnSave": true,
                "rust-analyzer.check": {
                    "command": "clippy",
                    "extraArgs": [
                        "--",
                        "-Dclippy::all",
                        "-Dwarnings"
                    ]
                }
            }
        }
    },
    "remoteUser": "vscode",
    "updateRemoteUserUID": true,
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=devcontainer-target,target=/workspaces/doublezero/target,type=volume"
    ],
    "capAdd": [
        "NET_ADMIN",
        "NET_RAW"
    ]
}